<% production_domain = Spree::Kelkoo::Config[:production_domain] %>
<% @products.each do |product| %>
  <%
    fields = []
    cats = []
    brand = ""
    if product.taxons.any? 
      product.taxons.each do |taxon|
        if taxon.parent && taxon.parent.name == "Marche"
          brand = taxon.name
        else
          if cats.empty?
            while taxon.parent != nil
              cats << taxon.name
              taxon = taxon.parent
            end
          end
        end
      end 
    end 
  %>
  <%= "#{brand.blank? ? "" : brand}|#{!cats.empty? ? cats.reverse.join(",") : ""}|#{product.name.capitalize}|#{product.sku.to_s}|#{product_price(product, {:format_as_currency => false})}|#{"6.00"}|#{"disponibile"}|#{production_domain + 'products/' + product.permalink}|#{production_domain.sub(/\/$/, '') + product.images.first.attachment.url(:product) unless product.images.empty?}|#{CGI.escapeHTML(product.description.gsub(%r{</?[^>]+?>}, '')).truncate(250) if product.description}" %><endrecord>
<% end %>

