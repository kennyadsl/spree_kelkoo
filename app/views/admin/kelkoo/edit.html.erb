<%= render :partial => 'admin/shared/configuration_menu' %>

<h1><%= t('edit_kelkoo_settings') %></h1>

<%= form_tag(admin_kelkoos_path, :method => :put) do %>
  <p>
    <label><%= t("kelkoo_title") %></label>
    <%= text_field_tag('preferences[kelkoo_title]', Spree::Kelkoo::Config[:kelkoo_title]) %>
  </p>
  <p>
    <label><%= t("kelkoo_description") %></label>
    <%= text_field_tag('preferences[kelkoo_description]', Spree::Kelkoo::Config[:kelkoo_description]) %>
  </p>
  <p>
    <label><%= t('production_domain') %></label>
    <%= text_field_tag('preferences[production_domain]', Spree::Kelkoo::Config[:production_domain])%>
  </p>


  <p class="form-buttons">
    <%= button t('update') %>
    <%= t("or") %> <%= link_to t("cancel"), admin_kelkoos_url %>
  </p>
<% end %>
